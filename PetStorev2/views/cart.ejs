<%- include('../partials/header.ejs') %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>View Cart</h1>
			<% if (pets_in_cart.length == 0) { %>
				<p>Your Cart is Empty!</p>
			<% } else { %>
			<p>Here are all the items in your cart</p>
				<p>
					<a class="btn btn-primary btn-lg" href="/order">
						Checkout</a>
				</p>
			<% } %>
		</div>
	</header>
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% pets_in_cart.forEach(function(pet){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%=pet.image_url %>">
					<div class="caption">
						<h4>
							<%= pet.pet_name %>
						</h4>
					</div>
					<p>
						<a href="/pets/<%= pet.pet_id %>" class="btn btn-primary">More Info</a>
					</p>
					<form action="/cart/<%=currentUser.id%>/<%=pet.pet_id%>?_method=DELETE" method="POST">
						<button class="btn btn-xl btn-warning">
							Remove
						</button>
					</form>
				</div>
			</div>
		<% }); %>
	</div>
		
</div>

<%- include('../partials/footer.ejs') %>